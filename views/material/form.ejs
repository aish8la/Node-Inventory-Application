<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fab Inventory | <%= subtitle %></title>
</head>
<body>
    <form action="<%= mode === 'edit' ? '/material/' + formData.material_id + '/edit' : '/material/new' %>" method="POST">
        <%- include("../partials/formErrors.ejs") %>
        <% if (mode === 'edit') { %> 
            <input type="hidden" id="materialId" name="materialId" value="<%= formData.material_id %>">
        <% } %>
        <label for="material-name">Material Name</label>
        <input type="text" name="materialName" id="material-name" value="<%= mode === 'edit' ? formData.material_name : '' %>">
        <label for="material-description">Material Description</label>
        <input type="text" name="materialDescription" id="material-description" value="<%= mode === 'edit' ? formData.material_description : '' %>">
        <% if( formData.categoryList ) { %>
            <label for="categories">Categories</label>
            <select name="categoriesId[]" id="categories" multiple>
                <% formData.categoryList.forEach(option => { %>
                    <option value="<%= option.category_id %>">
                    <%= option.category_name %></option>
                <% }); %>
            </select>
        <% } %>
        <label for="stock-in-hand">Stock In Hand</label>
        <input type="number" name="stockInHand" id="stock-in-hand" value="<%= mode === 'edit' ? formData.stock_in_hand : '' %>">
        <label for="is-protected">Protected</label>
        <input type="checkbox" value="true" id="is-protected" name="isProtected" <%= formData.is_protected ? 'checked'  : '' %>>
        <label for="password">Password</label>
        <input type="password" id="password" name="password">
        <button type="submit">Submit</button>
    </form>
</body>
</html>